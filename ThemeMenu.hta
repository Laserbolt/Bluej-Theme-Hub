<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>

    <HTA:APPLICATION 
        ID="oHTA"
        APPLICATIONNAME="DarkModeGUI"
        BORDER="thin"
        CAPTION="no"
        SCROLL="no"
		CONTEXTMENU="no"
		INNERBORDER="no"
		SELECTION="no"
        NAVIGATABLE="no"
		ICON="Icon/icon.ico" 
    />
	<script type="text/javascript">
        function startDrag() {
            window.moveTo(event.screenX - offsetX, event.screenY - offsetY);
        }

        function initDrag() {
            offsetX = event.offsetX;
            offsetY = event.offsetY;
            document.onmousemove = startDrag;
        }

        function stopDrag() {
            document.onmousemove = null;
        }
    </script>

    <style>
        body, .container {
            background-color: #2E2E2E; color: #E0E0E0;
            margin: 0; padding: 0; display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            height: 350px; width: 450px; font-family: Arial, sans-serif;
        }
        .container {
            background-color: #1C1C1C; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
            padding: 20px; width: 100%; text-align: center;
        }
        h1 { color: #FFFFFF; font-size: 28px; margin-bottom: 20px; }
        .button-container {
            display: grid; grid-template-columns: repeat(2, 1fr);
            gap: 10px; margin-bottom: 20px;
        }
        button {
            background-color: #4A4A4A; border: none; border-radius: 20px;
            color: #FFFFFF; padding: 10px; cursor: pointer;
            width: 50%; height: 35px; font-size: 16px;
        }
        button:hover { background-color: #616161; }
        .close-button {
            background-color: #FF0000; /* Red background */
            color: #FFFFFF; /* White text */
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
		    position: absolute;
            top: 10px;
            right: 10px;
			left: 450px;
            transform: translateY(-50%); /* Center the button vertically */
            font-size: 16px;
        }
		.close-button:hover { background-color: #616161; }
        .content {
            margin-top: 5px; /* Space for the header */
            text-align: center;
        }
    </style>

    <script language="VBScript">
        Sub Button_Click(buttonNumber)
            On Error Resume Next
            Dim shell, exitCode
            Set shell = CreateObject("WScript.Shell")

            exitCode = shell.Run(".\dat.bat " & buttonNumber, 1, True)

            If Err.Number <> 0 Then
                MsgBox "Error: " & Err.Description, vbCritical, "Execution Error"
                Err.Clear
            End If

            On Error GoTo 0
        End Sub

        Sub Window_onLoad
            window.resizeTo 490,220
        End Sub
		
		Sub Close_Window
            window.close()
        End Sub
    </script>
</head>
<body>
    <div class="container">
		<h1>BlueJ Themes<button class="close-button" onclick="Close_Window()">X</button></h1>
			<div class="button-container">
				<button onclick="Button_Click(1)">Default Theme</button>
				<button onclick="Button_Click(2)">Dark Theme</button>
				<button onclick="Button_Click(3)">Rose Theme</button>
				<button onclick="Button_Click(4)">High Contrast</button>
		    </div>
	</div>
</body>
<body onmousedown="initDrag();" onmouseup="stopDrag();" style="cursor: move;">
    <div style="width: 100%; height: 100%; text-align: center; padding: 20px;"></div>
</body>
</html>